{
  "family": "swiggy-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["EC2"],
  "cpu": "256",
  "memory": "512",

  "executionRoleArn": "arn:aws:iam::122931672162:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::122931672162:role/ecsTaskExecutionRole",

  "containerDefinitions": [
    {
      "name": "swiggy-container",
      "image": "<IMAGE_URI>",
      "essential": true,

      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/swiggy-task",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
